---
// src/components/Navbar.astro
import Container from './Container.astro';
import Button from './Button.astro';
---

<header class="fixed top-0 left-0 w-full bg-white/80 backdrop-blur-sm z-50 shadow-sm">
  <Container>
    <div class="flex items-center justify-between h-20">
      <a href="/" class="text-2xl font-bold text-slate-900">
        Young<span class="text-sky-600">Star Academy</span>
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        <a href="/rolunk" class="text-slate-600 hover:text-sky-600 transition-colors">Iskolánk</a>
        <a href="/kepzesek" class="text-slate-600 hover:text-sky-600 transition-colors">Képzéseink</a>
        <a href="/erasmus" class="text-slate-600 hover:text-sky-600 transition-colors">Erasmus+</a>
        <a href="/kapcsolat" class="text-slate-600 hover:text-sky-600 transition-colors">Kapcsolat</a>
      </nav>

      <div class="hidden md:block">
        <Button href="/jelentkezes">Jelentkezés</Button>
      </div>

      <button class="md:hidden text-slate-800">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
      </button>
    </div>
  </Container>
</header>