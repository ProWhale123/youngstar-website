---
// src/components/Navbar.astro
import { Image } from 'astro:assets';
import logo from '../assets/logo.jpg'; 
import Container from './Container.astro';
import Button from './Button.astro';
---

<header class="sticky top-0 left-0 w-full bg-white/90 backdrop-blur-lg z-50 shadow-sm">
  <Container>
    <div class="flex items-center justify-between h-20">
      <a href="/">
        <Image src={logo} alt="YoungStar Academy Logo" class="h-15 w-auto" />
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        <a href="#rolunk" class="text-slate-600 hover:text-sky-600 transition-colors">Rólunk</a>
        <a href="#kepzesek" class="text-slate-600 hover:text-sky-600 transition-colors">Képzéseink</a>
        <a href="#oktatoink" class="text-slate-600 hover:text-sky-600 transition-colors">Oktatóink</a>
        <a href="#kapcsolat" class="text-slate-600 hover:text-sky-600 transition-colors">Kapcsolat</a>
      </nav>

      <div class="hidden md:block">
        <Button href="/jelentkezes">Jelentkezés</Button>
      </div>

      <button class="md:hidden text-slate-800">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
      </button>
    </div>
  </Container>
</header>