---
// src/components/Footer.astro
import { Image } from 'astro:assets';
import logoWhite from '../assets/logo.jpg'; 
import Container from './Container.astro';

const currentYear = new Date().getFullYear();
---

<footer id="kapcsolat" class="bg-slate-800 text-slate-300 py-12">
  <Container>
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <Image src={logoWhite} alt="Young Star Academy Logo" class="h-14 w-auto" />
        <p class="mt-4 text-slate-400">Oktató és szolgáltató központ</p>
      </div>
      
      <div>
        <h4 class="font-bold text-white tracking-wider uppercase text-sm">Elérhetőség</h4>
        <ul class="mt-4 space-y-2 text-slate-400">
          <li>8000 Székesfehérvár, Király sor 52</li>
          <li><a href="mailto:info@youngstaracademy.hu" class="hover:text-white">info@youngstaracademy.hu</a></li>
          <li><a href="tel:+36309758676" class="hover:text-white">+36 30 975 8676</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-white tracking-wider uppercase text-sm">Képzéseink</h4>
        <ul class="mt-4 space-y-2 text-slate-400">
          <li><a href="/kepzesek/borbely" class="hover:text-white">Borbély képzés</a></li>
          <li><a href="/kepzesek/manikur" class="hover:text-white">Manikűr képzés</a></li>
          <li><a href="/kepzesek/szepsegtanacsado" class="hover:text-white">Szépségtanácsadó</a></li>
          <li><a href="#kepzesek" class="hover:text-white">További képzések...</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-slate-700 text-center text-slate-500 text-sm">
      <p>&copy; {currentYear} Young Star Academy. Minden jog fenntartva.</p>
      <p class="mt-1">
        powered by <a href="#" class="hover:text-white">Visualstorm</a> & <a href="#" class="hover:text-white">SaAn Design</a>
      </p>
    </div>
  </Container>
</footer>