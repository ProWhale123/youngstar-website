---
// src/layouts/MainLayout.astro
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Velemenyek from '../components/Velemenyek.astro';
import CallToAction from '../components/CallToAction.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="hu" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Young Star Academy - Borbély és szépségszakmai képzések." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Young Star Academy</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
      html {
        font-family: 'Inter', sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Poppins', sans-serif;
      }
    </style>
  </head>
  
  {/* EZ VÁLTOZOTT: A body kap egy sötét hátteret */}
  <body class="bg-slate-800 text-slate-800 antialiased flex flex-col min-h-screen">
    <Navbar />

    {/* A fő tartalom egy fehér hátterű div-be kerül */}
    <div class="flex-grow bg-white">
      <slot />
    </div>

    {/* Ezek a komponensek a sötét háttéren jelennek meg */}
    <Velemenyek />
    <CallToAction />
    <Footer />
  </body>
</html>